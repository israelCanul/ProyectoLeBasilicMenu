<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="restauran.lebasillic.menurestaurant.ScreenSlidePagerActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <restauran.lebasillic.menurestaurant.views.VerticalViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_navigation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btnidioma"
            android:id="@+id/imageView"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:scaleType="center" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_logo"
        android:paddingTop="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/bg_navigation">
            <Button
                android:id="@+id/dummy_starters"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorTextNav"
                android:text="@string/dummy_starters"
                android:drawableLeft="@drawable/ic_startes"
                android:textSize="12sp" />

            <Button
                android:id="@+id/dummy_fromsea"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorTextNav"
                android:text="@string/dummy_from_sea"
                android:drawableLeft="@drawable/ic_fish"
                android:textSize="12dp" />
            <Button
                android:id="@+id/dummy_meat"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/dummy_meat"
                android:drawableLeft="@drawable/ic_steak" />
            <Button
                android:id="@+id/dummy_desserts"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorTextNav"
                android:text="@string/dummy_desserts"
                android:drawableLeft="@drawable/ic_dessert"
                android:textSize="12dp"/>
            <Button
                android:id="@+id/dummy_granmenu"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorTextNav"
                android:text="@string/dummy_granmenu"
                android:drawableLeft="@drawable/ic_menu"
                android:textSize="12dp"/>
            <Button
                android:id="@+id/dummy_liqueur"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorTextNav"
                android:text="@string/dummy_liqueurs"
                android:drawableLeft="@drawable/ic_liquors"
                android:textSize="12dp"/>
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>